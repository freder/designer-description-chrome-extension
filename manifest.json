{
	"manifest_version": 2,
	"name": "RRR-DesignerDescription",
	"description": "a chrome extension that harvests all design-related meta descriptions it encounters, and adds them to an are.na channel.",
	"version": "2",
	"author": "freder",
	"permissions": [
		"activeTab",
		"storage"
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true,
		"chrome_style": true
	},
	"browser_action": {
		"default_title": "harvest"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"run_at": "document_idle",
			"js": [
				"config.js",
				"utils.js",
				"content.js"
			]
		}
	]
}
